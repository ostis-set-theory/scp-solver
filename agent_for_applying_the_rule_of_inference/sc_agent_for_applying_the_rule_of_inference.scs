sc_agent_for_applying_the_rule_of_inference
=> nrel_main_idtf:
	[sc-агент применения правила вывода] 
	(* <- lang_ru;; *);
	[sc-agent for applying the rule of inference] 
	(* <- lang_en;; *);

<- abstract_sc_agent;

=> nrel_primary_initiation_condition: 
	(sc_event_add_output_arc => question_initiated);

=> nrel_initiation_condition_and_result: 
	(..sc_agent_for_applying_the_rule_of_inference_condition => ..sc_agent_for_applying_the_rule_of_inference_result);

<= nrel_sc_agent_key_sc_elements: 
	{
	question_initiated;
	question;
	question_for_applying_the_rule_of_inference
	};

=> nrel_inclusion: 
	.platform_independent_realization_of_sc_agent_for_applying_the_rule_of_inference
	(*
	<- platform_independent_abstract_sc_agent;;
	<= nrel_sc_agent_program: 
		{
		agent_for_applying_the_rule_of_inference;
		proc_for_applying_the_rule_of_inference	
		};;
	-> sc_agent_for_applying_the_rule_of_inference_scp   
		(* <- active_sc_agent;; *);;
	*);;

..sc_agent_for_applying_the_rule_of_inference_condition
= [*
	question_for_applying_the_rule_of_inference _-> .._question;;
	question_initiated _-> .._question;;
	question _-> .._question;;
	.._question _-> .._parameter;;
*];;

..sc_agent_for_applying_the_rule_of_inference_result
= [*
	question_for_applying_the_rule_of_inference _-> .._question;;
	question_finished _-> .._question;;
	question _-> .._question;;
	.._question _=> nrel_answer:: .._answer;;
	.._question _-> .._parameter;;
*];;